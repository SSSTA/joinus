<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/activity_recent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="26dp"
        android:text="最近活动" />

    <Button
        android:id="@+id/activity_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_recent"
        android:layout_alignBottom="@+id/activity_recent"
        android:layout_toRightOf="@+id/activity_recent"
        android:text="搜索活动" />

    <Button
        android:id="@+id/myActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/activity_search"
        android:layout_alignBottom="@+id/activity_search"
        android:layout_alignParentRight="true"
        android:text="我的活动" />

</RelativeLayout>
